---
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
// Supports weights 100-900
import "@fontsource-variable/onest";
import Header from "@/components/Header.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Jhorky Escalante - @jhorky91" />
    <meta
      name="keywords"
      content="Jhorky Escalante, Analista Funcional, Desarrollador Web, Astro, Tailwind, Supabase, Express, JavaScript, TypeScript, React, Node, PostgreSQL, MySQL, Oracle, SQL Server, MongoDB, Linux, Figma, PostMan, Git, Azure DevOps, Metodologías ágiles, Cypress"
    />
    <meta name="application-name" content="Portafolio Jhorky Escalante" />
    <meta name="theme-color" content="#000000" />
    <meta name="color-scheme" content="light dark" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="google" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    <meta name="yandex" content="index, follow" />
    <meta name="baidu" content="index, follow" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@jhorky91" />
    <meta name="twitter:creator" content="@jhorky91" />
    <meta property="og:url" content="https://jhorky.dev" />
    <meta property="og:title" content="Portafolio Jhorky Escalante" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/foto_cv.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Portafolio Jhorky Escalante" />
    <!-- SON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Jhorky Escalante",
        "url": "https://jhorky.dev",
        "sameAs": [
          "https://github.com/jhorky91",
          "https://www.linkedin.com/in/jhorkyescalante",
          "https://x.com/JhorkyDev",
          "https://www.youtube.com/@jhorky91"
        ],
        "jobTitle": "Analista Funcional y Desarrollador Web",
        "worksFor": {
          "@type": "Organization",
          "name": "Freelance / Proyectos propios"
        }
      }
    </script>
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link rel="icon" href="/favicon.ico" sizes="any"/>
    <title>
      {title ? `${title} | Jhorky Escalante` : "Jhorky Escalante | Portafolio"}
    </title>
  </head>
  <body class="h-screen flex flex-col overflow-hidden">
    <!-- Fondo -->
    <div
      class="absolute inset-0 -z-10 h-screen w-full [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
    >
    </div>
    <!-- Header fijo -->
    <Header />
    <main class="flex-1 overflow-y-auto px-5 py-4 pt-[80px]">
      <slot />
    </main>
  </body>

  <style is:global>
    :root {
      color-scheme: light dark;
    }
    html {
      font-family: sans-serif;
      height: 100%;
      scroll-behavior: smooth;
    }
    body {
      margin: 0;
      width: 100%;
      height: 100vh;
      font-family: "Onest Variable", sans-serif;
    }
  </style>
</html>
