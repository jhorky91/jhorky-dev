---
const { label, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="text-white bg-[#7F5AF0] hover:bg-purple-600 border border-transparent focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center gap-x-2 cursor-pointer transition-all duration-300 hover:scale-105"
>
  <slot name="icon" />
  {label}
</a>
